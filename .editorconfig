# This is more like personal preference

root = true

[*]
charset = utf-8
indent_size = 2
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{markdown,mdown,md}]
trim_trailing_whitespace = false

[*.html]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab
